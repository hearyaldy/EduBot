# Environment Variables for EduBot
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_TOKENS=1500
GEMINI_TEMPERATURE=0.7

# Legacy OpenAI Configuration (kept for reference)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-3.5-turbo
# OPENAI_MAX_TOKENS=1500
# OPENAI_TEMPERATURE=0.7

# App Configuration
APP_ENV=development
DEBUG_MODE=true
ENABLE_LOGGING=true

# Security Configuration
SUPERADMIN_PASSWORD=your_secure_password_here

# Feature Flags
ENABLE_PREMIUM_FEATURES=true
ENABLE_VOICE_INPUT=true
ENABLE_AUDIO_OUTPUT=true
ENABLE_CAMERA_SCANNING=true

# Limits
DAILY_FREE_QUESTION_LIMIT=10
MAX_SAVED_QUESTIONS=100
MAX_QUESTION_LENGTH=500

# Support Information
SUPPORT_EMAIL=support@yourdomain.com
PRIVACY_POLICY_URL=https://yourdomain.com/privacy
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms
HELP_URL=https://yourdomain.com/help

# API Endpoints (if using custom backend)
# API_BASE_URL=https://api.yourdomain.com
# API_VERSION=v1

# Analytics (optional)
# ANALYTICS_API_KEY=your_analytics_key_here
# ENABLE_ANALYTICS=false