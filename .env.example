# Environment Variables for EduBot - Example Template
# Copy this file to .env and fill in your actual values
# This file can be safely committed to version control

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.7

# App Configuration
APP_ENV=development
DEBUG_MODE=true
ENABLE_LOGGING=true

# Feature Flags
ENABLE_PREMIUM_FEATURES=true
ENABLE_VOICE_INPUT=true
ENABLE_AUDIO_OUTPUT=true
ENABLE_CAMERA_SCANNING=true

# Limits
DAILY_FREE_QUESTION_LIMIT=10
MAX_SAVED_QUESTIONS=100
MAX_QUESTION_LENGTH=500

# Support Information
SUPPORT_EMAIL=support@edubot.app
PRIVACY_POLICY_URL=https://edubot.app/privacy
TERMS_OF_SERVICE_URL=https://edubot.app/terms
HELP_URL=https://edubot.app/help

# API Endpoints (if using custom backend)
# API_BASE_URL=https://api.edubot.app
# API_VERSION=v1

# Analytics (optional)
# ANALYTICS_API_KEY=your_analytics_key_here
# ENABLE_ANALYTICS=false
